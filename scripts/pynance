SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
SERVER_ARGS=("--local" "-local" "--l" "-l" "--container" "-container" "--c" "-c")

for arg in $SERVER_ARGS
do
    if [ "$1" == "$arg" ]
    then
        this_arg=$1
        shift
        bash $SCRIPT_DIR/server/launch-server.sh $this_arg
        exit 0
    fi
done

python SCRIPT_DIR/../main.py $@